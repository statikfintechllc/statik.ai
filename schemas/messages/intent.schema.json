{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "statik://schemas/messages/intent",
  "title": "Intent",
  "description": "Classified user or system intent",
  "type": "object",
  "required": ["id", "timestamp", "type", "confidence"],
  "properties": {
    "id":         { "type": "string" },
    "timestamp":  { "type": "number" },
    "type":       { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "entities":   { "type": "array", "items": { "type": "object" } },
    "raw":        { "type": "string" }
  }
}
